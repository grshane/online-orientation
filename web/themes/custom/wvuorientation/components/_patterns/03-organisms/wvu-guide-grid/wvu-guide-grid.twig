{% extends "@base/layouts/grid/00-grid.twig" %}

{% block grid_content %}
  {% for card in cards %}
    {% include "@molecules/wvu-guide/wvu-guide.twig" with {
      "card_serial_number": loop.index,
      "card_blockname": card.blockname,
      "card_modifiers": card.card_modifiers,
      "card_img_src": card.card_img_src,
      "card_title": card.card_title,
      "card_subtitle": card.card_subtitle,
      "card_body": card.card_body,
      "card_link_url": card.card_link_url,
      "card_image_output_image_tag": card.card_image_output_image_tag,
      "card_button_content": card.card_button_content,
      "card_button_url": card.card_button_url,
      "card_extra_content": card.card_extra_content,
      "card_body_extra": card.card_body_extra,
      "card_external_link": card.card_external_link,
      "multiple": card.multiple
    } %}
  {% endfor %}
{% endblock %}
